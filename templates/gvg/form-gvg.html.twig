{% extends 'layout.html.twig' %}

{% block title %}Guild application{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-5 col-lg-6">
            <h1>{% trans %}GVG{% endtrans %}</h1>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-6">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.time) }}
                    {{ form_widget(form.time) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    {{ form_label(form.enemy) }}
                    {{ form_widget(form.enemy) }}
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.territory) }}
                    {{ form_widget(form.territory) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
