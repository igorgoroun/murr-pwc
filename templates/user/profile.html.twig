{% extends 'layout.html.twig' %}

{% block title %}{% trans %}Profile{% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-5 col-lg-6">
            <h1>{% trans %}Profile{% endtrans %}</h1>
            {{ form_start(form) }}
            {{ form_row(form.realName) }}
            {{ form_row(form.nickName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.charClass) }}
            {{ form_row(form.charSide) }}
            {{ form_row(form.subscription) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
