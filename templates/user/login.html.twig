{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 col-md-7 col-lg-5">
            <h1 class="">{% trans %}Please sign in{% endtrans %}</h1>
            <form role="form" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


                <div class="form-group">
                    <label for="inputEmail" class="col-form-label sr-only">{% trans %}Email{% endtrans %}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{% trans %}Email{% endtrans %}" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-form-label sr-only">{% trans %}Password{% endtrans %}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{% trans %}Password{% endtrans %}" required>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="RememberCheck" name="_remember_me">
                    <label class="form-check-label" for="RememberCheck">{% trans %}Remember me{% endtrans %}</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary" type="submit">
                    {% trans %}Sign in{% endtrans %}
                </button>
            </form>
            <br>
        </div>
        <div class="col-12 col-md-5 offset-lg-1 col-lg-6">
            <h1>{% trans %}Have no account{% endtrans %}?</h1>
            <p><a href="{{ path('user_signup') }}">{% trans %}Player sign up{% endtrans %}</a></p>
        </div>
    </div>

{% endblock %}
