{% extends 'layout.html.twig' %}

{% block title %}Homepage block{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1>{% trans %}Homepage bock{% endtrans %}</h1>
            {{ form_start(form) }}
            {{ form_row(form.body) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
        $(function () {
            var simplemde = new SimpleMDE({
                //element: $("#homepage")[0],
                shortcuts: {
                    drawTable: "Cmd-Alt-T"
                },
                spellChecker: false,
                showIcons: ["table"], //"code",
                hideIcons: ["side-by-side", "fullscreen"],
            });

            $("#forum_topic_save").click(function (e) {
                $("#forum_topic_postBody").val(simplemde.value());
            });
