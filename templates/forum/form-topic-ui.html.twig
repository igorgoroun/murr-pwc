{% extends 'layout.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('forum') }}">{{ directory.forum.name }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ directory.name }}</li>
                </ol>
            </nav>

        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-3">
            <h1>{% trans %}New topic{% endtrans %}</h1>
        </div>
        <div class="col-12 col-md-9">
            {{ form_start(form) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
    $(function () {
        var simplemde = new SimpleMDE({
            element: $("#forum_topic_postBody")[0],
            shortcuts: {
                drawTable: "Cmd-Alt-T"
            },
            spellChecker: false,
            showIcons: ["table"], //"code",
            hideIcons: ["side-by-side", "fullscreen"],
        });

        $("#forum_topic_save").click(function (e) {
            $("#forum_topic_postBody").val(simplemde.value());
        });
        /*$("form[name=forum_topic]").submit(function (e) {
            e.preventDefault();
            console.log(simplemde.value());
        });
*/
    });
</script>
{% endblock %}
